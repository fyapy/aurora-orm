    "@types/pg": "8.11.9",
    "eslint": "9.10.0",
    "eslint-plugin-perfectionist": "3.6.0",
    "pg": "8.12.0",
    "postgres": "3.4.4",
    "puppeteer": "23.4.0",
    "reflect-metadata": "0.2.2",
    "tsup": "8.2.4",
    "tsx": "4.19.1",
    "typeorm": "0.3.20",
    "typescript": "5.6.2",
    "typescript-eslint": "8.5.0",
    "vitest": "2.1.1"
