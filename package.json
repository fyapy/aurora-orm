{
  "name": "aurora-orm",
  "version": "0.2.34",
  "description": "Near-zero runtime ORM and migration tool for PostgreSQL with TypeScript and Node.js",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "aurora-orm": "bin/aurora-orm.js"
  },
  "author": "Amir Abdullin",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --removeComments && tsc --declaration --emitDeclarationOnly",
    "test": "vitest run",
    "bench": "node ./benchmarks/aurora_sync/index.js",
    "prepublish": "pnpm run build"
  },
  "files": [
    "templates",
    "dist",
    "bin"
  ],
  "peerDependencies": {
    "@types/pg": "*",
    "pg": ">=8",
    "tsx": ">=4"
  },
  "peerDependenciesMeta": {
    "pg": {
      "optional": true
    },
    "@types/pg": {
      "optional": true
    },
    "tsx": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "22.5.0",
    "@types/pg": "8.11.9",
    "pg": "8.12.0",
    "rimraf": "6.0.1",
    "tsx": "4.19.1",
    "typescript": "4.9.4",
    "vitest": "2.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fyapy/aurora-orm.git"
  },
  "bugs": {
    "url": "https://github.com/fyapy/aurora-orm/issues"
  }
}
