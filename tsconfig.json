{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["es2019"],
    "esModuleInterop": true,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noImplicitOverride": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src", "scripts", "templates"]
}
