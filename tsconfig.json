{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es2019"],
    "esModuleInterop": true,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noImplicitOverride": true
  },
  "include": ["src", "scripts"],
  "exclude": [
    "node_modules",
    "templates",
    "dist",
    "bin",
    "migrations",
    "benchmarks",
    "**/*.test.ts",
    "**/*.mock.ts",
  ]
}
